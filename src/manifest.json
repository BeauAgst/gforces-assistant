{
	"manifest_version": 2,
	"name": "GForces CSS Assistant",
	"short_name": "GFA",
	"description": "Assistant to help with daily GForces CSS tasks",
	"version": "0.0.1",

	"icons": { 
		"210": "img/icon.png" 
	},

	"content_scripts": [{
		"matches": ["<all_urls>"],
		"js": [
			"js/lib/jquery.min.js",
			"js/lib/moment.min.js",
			"js/settings.js",
			"js/v10/auth.js",
			"js/jira/subtasks.js",
			"js/jira/tickets.js"
		],
		"run_at": "document_end"
	}],

	"background": {
		"scripts": ["js/background.js"],
		"persistent": true
	},

	"browser_action": {
		"default_icon": "img/icon.png",
		"default_popup": "popup.html"
	},

	"permissions": [
		"activeTab",
		"storage"
	]
}